#!/usr/bin/env ruby

puts "Usage:"

require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: gifr video.mp4 --from 1h1s3s --to 1h1m10s mygif.gif"

  opts.on("-h", "--help", "Show usage informations") do |v|
    options[:help] = v
  end

  opts.on("-f", "--from", "") do |v|
    options[:from] = v
  end

  opts.on("-t", "--to", "") do |v|
    options[:to] = v
  end

  opts.on("-f", "--file", "") do |v|
    options[:file] = v
  end

  opts.on("-s", "--size", "") do |v|
    options[:size] = v
  end
end.parse!

filename = ARGV.pop
